---
import type { ImageMetadata } from 'astro';
import { Image } from '@unpic/astro';

interface Props {
   imagePath: string;
   altText: string;
   width?: number;
   height?: number;
}

const { imagePath, altText, width, height } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/images/*.{jpeg,jpg,png,webp}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "/src/images/*.{jpeg,jpg,png,webp}"`);
---


    <Image src={images[imagePath]()} alt={altText} width={width} height={height} class="galleryImg" />
