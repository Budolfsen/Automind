<style>
@import url("https://use.typekit.net/lbj2leo.css");

:root {
		--silver: oklch(80.78% 0 0);
		--orange:  oklch(78.97% 0.175 64.06);
	}

	.container {
		width: 90%;
		max-width: 1440px;
		margin-inline: auto;
		margin-top: 1rem;
	}

	html {
  box-sizing: border-box;
  font-size: 16px;
}

*, *:before, *:after {
  box-sizing: inherit;
}

p + p {
	margin-top: 1.5rem;

}

body, h1, h2, h3, h4, h5, h6, p, ol, ul {
  margin: 0;
  padding: 0;
  font-weight: normal;
	background: oklch(0% 0 0);
	color: var(--silver);
font-family: loew-variable, sans-serif;
line-height: 1.5;
}

h3 {
	margin-top: 1.5rem;
}

h4 {
	margin-top: 1rem;
}

ol, ul {
  list-style: none;
}

img {
  max-width: 100%;
  height: auto;
	object-fit: cover;
}

a {
	color: var(--orange);
	font-weight: bold;
}

.logo {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 1.5rem;
	margin-bottom: 3rem;
}

.heroImage {
	aspect-ratio: 16 / 9;
}

.gallery {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	gap: 1rem;
	margin-top: 2rem;
	.galleryImg {
		aspect-ratio: 16 / 9;
		width: 100%;
		height: auto;
	}

}

</style>